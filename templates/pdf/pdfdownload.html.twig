{% extends "pdf/base-pdf.html.twig" %}
{% block body %}
	<table border="1" id="tasksTable">
		<thead>
			<tr>
				<th>Id</th>
				<th>Nom</th>
				<th>Description</th>
				<th>Date effective</th>
				<th>Cat√©gorie</th>
			</tr>
		</thead>
		<tbody>
			{% if tasks is defined %}
				{% for task in tasks %}
					<tr>
						<td>{{ task.id }}</td>
						<td>{{ task.name }}</td>
						<td>{{ task.description }}</td>
						<td>{{ task.dueAt | date('d/m/Y H:i')}}</td>
						<td>{{ task.tag.name }}</td>
					</tr>
				{% endfor %}
			{% endif %}
		</tbody>
	</table>
{% endblock %}
